{
  "compilerOptions": {
    "target": "es5",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "typeRoots": ["src/@types", "node_modules/@types", "./node_modules/phaser/types"],
    "types": [
      "Phaser"
    ]
  },
  "files": ["src/main.ts"]
}
